<xml xmlns="https://developers.google.com/blockly/xml" id="toolbox" style="display: none">
  <category name="ÁNH SÁNG" colour="#ae00ae" icon="palette">
    <block type="scan_card" />
    <block type="read_relay_status_at_address">
      <value name="address">
          <shadow type="math_number">
            <field name="NUM">1</field>  <!-- Địa chỉ relay -->
          </shadow>
      </value>
    </block>
    <block type="scan_and_add_card">
      <value name="LISTNAME">
        <shadow type="text">
          <field name="TEXT">my_list</field>
        </shadow>
      </value>
    </block>
    <!-- <block type="veml6040_sensor _read_lux" />
    <block type="veml6040_sensor _read_cct" /> -->
  </category>
</xml>
